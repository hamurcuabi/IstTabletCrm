<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80"
    android:layout_marginTop="@dimen/detay_menu_10"
    android:layout_marginBottom="@dimen/detay_menu_10"
    android:background="@color/white"
    android:elevation="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/detay_menu_40"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="Uygunsuzluk"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_musteri_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.3"
        android:fontFamily="@font/roboto_regular"
        android:text="Uygunsuzluk"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_tarih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="Uygunsuzluk"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_asansor_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="Uygunsuzluk"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

</LinearLayout>