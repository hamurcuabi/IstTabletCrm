<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80"
    android:layout_marginTop="@dimen/detay_menu_10"
    android:layout_marginBottom="@dimen/detay_menu_10"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/detay_menu_25"
        android:layout_marginEnd="@dimen/menu_text_12"
        android:layout_weight="2"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_descp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_25"
        android:layout_weight="7"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <Button
        android:id="@+id/btn_look"
        android:layout_width="@dimen/margin80"
        android:layout_height="@dimen/detay_menu_35"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_25"
        android:background="@drawable/btn_konum_rounded"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/incele"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />


</LinearLayout>