<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_default_layout"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/cb_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detay_menu_20"
        android:buttonTint="@color/kontrol_listesi"
        android:checked="true"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/dummy_info_short"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="0dp"
            android:layout_height="@dimen/detay_menu_68"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginEnd="@dimen/padding_top25"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rad_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/detay_menu_35"
                android:layout_weight="1"
                android:buttonTint="@color/kontrol_listesi"
                android:text="@string/yes"
                android:textSize="@dimen/menu_text_16" />

            <RadioButton
                android:id="@+id/rad_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/kontrol_listesi"
                android:checked="true"
                android:text="@string/no"
                android:textSize="@dimen/menu_text_16" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_descp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detay_menu_68"
                android:layout_marginTop="@dimen/detay_menu_8"
                android:layout_marginBottom="@dimen/detay_menu_8"
                android:gravity="center_vertical">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_descp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:hint="@string/aciklama"
                    android:textColorHint="@color/is_kapatma" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detay_menu_8"
                android:layout_marginBottom="@dimen/detay_menu_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tarih"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_calendar_height"
                    android:background="@drawable/calendar_style"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/detay_menu_12" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_decimal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detay_menu_68"
                android:layout_marginTop="@dimen/detay_menu_8"
                android:layout_marginBottom="@dimen/detay_menu_8"
                android:gravity="center_vertical">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_decimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:hint="@string/yuzde"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/is_kapatma" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />


    </LinearLayout>


</LinearLayout>