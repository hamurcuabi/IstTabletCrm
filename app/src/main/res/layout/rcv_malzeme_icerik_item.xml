<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_kod"
        android:layout_marginStart="@dimen/detay_menu_30"
        android:layout_weight="2.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kod"
        android:textAllCaps="true"
        android:textColor="@color/btn_dark_blue"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_urunadi"
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urun_adi"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_miktar"
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miktar"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_birim"
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_stokdurumu"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stok_durumu"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_garantidurumu"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/garanti_durumu"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fatura"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faturalandiralacakmi"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_urundahilimi"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urun_dahilindemi"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />
</LinearLayout>