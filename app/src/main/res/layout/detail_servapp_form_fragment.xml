<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/detay_menu_10"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:text="@string/aciklama"
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_top25"
            android:layout_marginTop="@dimen/text_menu_32"
            android:background="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_32" />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_top25"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/text_color_3"
            android:textSize="@dimen/text_menu_16" />
    </LinearLayout>
</LinearLayout>