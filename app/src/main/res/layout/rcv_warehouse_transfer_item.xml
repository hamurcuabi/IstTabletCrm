<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_tranfertipi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/depo"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_urunadi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.7"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/urun_adi"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_miktar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/miktar"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_birim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_tarih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_onay_durumu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_depo_cikis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_depo_gonderilecek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/birim"
        android:textAllCaps="true"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/menu_text_14"
        android:textStyle="bold" />
</LinearLayout>