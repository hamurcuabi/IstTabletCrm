<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:visibility="invisible"
            android:layout_gravity="end"
            android:background="@color/bg"
            android:layout_width="@dimen/close"
            android:layout_height="@dimen/close"
            android:layout_marginTop="@dimen/detay_menu_8"
            android:layout_marginEnd="@dimen/detay_menu_8"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/arizaoncesi"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_24"
            android:textStyle="bold" />

        <ImageView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:src="@drawable/gps" />

        <ImageView
            android:layout_weight="2"
            android:background="@color/gorseller"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            />
        <TextView
            android:layout_marginBottom="@dimen/detay_menu_12"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/foto_ekle"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold"  />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="end"
            android:background="@color/bg"
            android:id="@+id/img_close"
            android:layout_width="@dimen/close"
            android:layout_height="@dimen/close"
            android:layout_marginTop="@dimen/detay_menu_8"
            android:layout_marginEnd="@dimen/detay_menu_8"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/arizaoncesi"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_24"
            android:textStyle="bold" />

        <ImageView
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:src="@drawable/gps" />

        <ImageView
            android:layout_weight="2"
            android:background="@color/gorseller"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            />
        <TextView
            android:layout_marginBottom="@dimen/detay_menu_12"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/detay_menu_25"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/foto_ekle"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold"  />


    </LinearLayout>


</LinearLayout>