<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginBottom="@dimen/detay_menu_20"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/detay_menu_50"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1.5"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/kontrol_listesi"
            android:textColor="@color/text_color"
            android:textSize="@dimen/menu_text_32" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:checked="true"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:checked="true"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_rigt32"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/detay_menu_35"
                    android:buttonTint="@color/kontrol_listesi"
                    android:text="@string/yes"
                    android:textSize="@dimen/menu_text_16" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:checked="true"
                    android:text="@string/no"
                    android:textSize="@dimen/menu_text_16" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_pass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/detay_menu_400"
                android:layout_height="@dimen/detay_menu_68"
                android:layout_marginStart="@dimen/detay_menu_40"
                android:gravity="center_vertical">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:hint="@string/aciklama"
                    android:inputType="textPassword"
                    android:textColorHint="@color/is_kapatma" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_rigt32"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/detay_menu_35"
                    android:buttonTint="@color/kontrol_listesi"
                    android:text="@string/yes"
                    android:textSize="@dimen/menu_text_16" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:text="@string/no"
                    android:textSize="@dimen/menu_text_16" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/detay_menu_400"
                android:layout_height="@dimen/detay_menu_68"
                android:layout_marginStart="@dimen/detay_menu_40"
                android:gravity="center_vertical">

                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/kontrol_listesi"
                    android:hint="@string/aciklama"
                    android:inputType="textPassword"
                    android:textColorHint="@color/is_kapatma" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_weight="1"
            android:buttonTint="@color/kontrol_listesi"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_info_short"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/detay_menu_40"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/close"
            android:layout_height="@dimen/close"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/detay_menu_8"
            android:layout_marginEnd="@dimen/detay_menu_8"
            android:background="@color/bg"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:src="@drawable/task" />
    </LinearLayout>


</LinearLayout>