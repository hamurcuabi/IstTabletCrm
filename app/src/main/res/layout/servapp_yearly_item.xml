<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/detay_menu_12"
    android:background="@color/bg"
    android:elevation="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rlf"
        android:layout_width="@dimen/isemri_left_width"
        android:layout_height="match_parent"
        android:background="@drawable/isemri_muayene"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_menu_18" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/detay_menu_12"
        android:background="@drawable/ic_muayene" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin30"
        android:layout_marginEnd="@dimen/margin30"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/yedek"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_custumerid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_aprt"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:text="@string/konusu"
        android:textColor="@color/text_color"
        android:textSize="@dimen/isemri_text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_start_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/date2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />

        <TextView
            android:id="@+id/txt_start_date_clock"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_clock"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_end_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/date2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />

        <TextView
            android:id="@+id/txt_end_date_clock"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/dummy_clock"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/detay_menu_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_oncelik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/konusu"
            android:textColor="@color/text_color"
            android:textSize="@dimen/isemri_text" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/detay_menu_8"
            android:id="@+id/img_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yuksek" />
    </LinearLayout>


</LinearLayout>