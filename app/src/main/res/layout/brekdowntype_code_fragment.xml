<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/detay_menu_12"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/arizakodu"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_32" />

        <LinearLayout
            android:id="@+id/lnr_mus_adi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/detay_menu_50"
            android:layout_marginEnd="@dimen/padding_top25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/spinner_musteri"
                android:layout_alignBottom="@+id/spinner_musteri"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_musteri"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/urun_anakodu"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_menu_15"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/spn_main"
                android:layout_width="0dp"
                android:layout_height="@dimen/edt_calendar_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/detay_menu_30"
                android:layout_weight="5"
                android:background="@drawable/spn_style"
                android:paddingStart="@dimen/detay_menu_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_marginEnd="@dimen/padding_top25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/spinner_musteri"
                android:layout_alignBottom="@+id/spinner_musteri"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_musteri"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/urunaltkodu"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_menu_15"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/spn_sub"
                android:layout_width="0dp"
                android:layout_height="@dimen/edt_calendar_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/detay_menu_30"
                android:layout_weight="5"
                android:background="@drawable/spn_style"
                android:paddingStart="@dimen/detay_menu_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_marginEnd="@dimen/padding_top25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/spinner_musteri"
                android:layout_alignBottom="@+id/spinner_musteri"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_musteri"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/ururntanim"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_menu_15"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/spn_descp_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/edt_calendar_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/detay_menu_30"
                android:layout_weight="5"
                android:background="@drawable/spn_style"
                android:paddingStart="@dimen/detay_menu_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/detay_menu_5"
            android:layout_marginEnd="@dimen/padding_top25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/spinner_musteri"
                android:layout_alignBottom="@+id/spinner_musteri"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_musteri"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/arizakodu"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color_5"
                android:textSize="@dimen/text_menu_15"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/spn_breakdowntype"
                android:layout_width="0dp"
                android:layout_height="@dimen/edt_calendar_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/detay_menu_30"
                android:layout_weight="5"
                android:background="@drawable/spn_style"
                android:paddingStart="@dimen/detay_menu_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_top25"
            android:layout_marginTop="@dimen/padding_top25"
            android:layout_marginEnd="@dimen/padding_top25"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"/>

            <Button
                android:layout_marginStart="@dimen/detay_menu_30"
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_kontrol"
                android:text="@string/kaydet"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
              />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>