<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80"
    android:layout_marginTop="@dimen/detay_menu_10"
    android:layout_marginBottom="@dimen/detay_menu_10"
    android:background="@color/white"
    android:id="@+id/lnr"
    android:elevation="2dp"
    android:orientation="horizontal">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/bakim"
            android:textSize="@dimen/text_menu_16" />

        <TextView
            android:id="@+id/txt_supervisor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.2"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/mobil_konum"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/mobil_konum"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/detay_menu_25"
            android:src="@drawable/ic_right" />
    </LinearLayout>


</LinearLayout>