<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ServAppDetailActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/servapp_detail_height"
        android:background="@drawable/servapp_detail"
        android:src="@drawable/servapp_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_left"
                android:layout_marginTop="@dimen/menu_top"
                android:src="@drawable/ic_menu_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:id="@+id/txt_menu_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/servapp_icon_text"
                android:text="@string/isemirlerim"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintStart_toEndOf="@+id/img_menu"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_servis_raporu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_left_32"
                android:text="@string/servis_raporu"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <ImageView
                android:id="@+id/img_servis_raporu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_icon_text"
                android:src="@drawable/ic_servis_rapor"
                app:layout_constraintBottom_toBottomOf="@+id/txt_servis_raporu"
                app:layout_constraintEnd_toStartOf="@+id/txt_servis_raporu"
                app:layout_constraintTop_toTopOf="@+id/txt_servis_raporu" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_isemri_tamamla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_left_32"
                android:text="@string/isemri_tamamla"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintEnd_toStartOf="@+id/img_servis_raporu"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <ImageView
                android:id="@+id/img_isemri_tamamla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_icon_text"
                android:src="@drawable/ic_isemri_tamamla"
                app:layout_constraintBottom_toBottomOf="@+id/txt_servis_raporu"
                app:layout_constraintEnd_toStartOf="@+id/txt_isemri_tamamla"
                app:layout_constraintTop_toTopOf="@+id/txt_servis_raporu" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_iptal_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_left_32"
                android:text="@string/iptal"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintEnd_toStartOf="@+id/img_isemri_tamamla"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <ImageView
                android:id="@+id/img_iptal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_icon_text"
                android:src="@drawable/ic_iptal"
                app:layout_constraintBottom_toBottomOf="@+id/txt_servis_raporu"
                app:layout_constraintEnd_toStartOf="@+id/txt_iptal_et"
                app:layout_constraintTop_toTopOf="@+id/txt_servis_raporu" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_kaydet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_left_32"
                android:text="@string/kaydet"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintEnd_toStartOf="@+id/img_iptal"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <ImageView
                android:id="@+id/img_kaydet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_icon_text"
                android:src="@drawable/ic_kaydet"
                app:layout_constraintBottom_toBottomOf="@+id/txt_servis_raporu"
                app:layout_constraintEnd_toStartOf="@+id/txt_kaydet"
                app:layout_constraintTop_toTopOf="@+id/txt_servis_raporu" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_yeni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_left_32"
                android:onClick="newServApp"
                android:text="@string/yeni"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintEnd_toStartOf="@+id/img_kaydet"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />

            <ImageView
                android:id="@+id/img_yeni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/menu_icon_text"
                android:src="@drawable/ic_yeni"
                app:layout_constraintBottom_toBottomOf="@+id/txt_servis_raporu"
                app:layout_constraintEnd_toStartOf="@+id/txt_yeni"
                app:layout_constraintTop_toTopOf="@+id/txt_servis_raporu" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/menu_left"
        android:layout_marginTop="@dimen/detay_menu"
        android:layout_marginEnd="@dimen/menu_left_32"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lnr_ilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_55"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_name_makine" />

            <LinearLayout
                android:layout_width="@dimen/menu_detay"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firma_ismi"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_firma"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_menu_28" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_info_short"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_iki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_55"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnr_ilk">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_asansor_no" />

            <LinearLayout
                android:layout_width="@dimen/menu_detay"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asansor_no"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_no"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_menu_28" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_55"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnr_iki">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_ariza" />

            <LinearLayout
                android:layout_width="@dimen/menu_detay"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:layout_marginBottom="@dimen/detay_menu_35"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/isemri_tipi"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ariza"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_menu_28" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progres_height_parent"
                    android:background="@drawable/lnr_progres_parent">

                    <ImageView
                        android:layout_width="@dimen/progres"
                        android:layout_height="@dimen/progres_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/progres_padding"
                        android:layout_marginBottom="@dimen/progres_padding"
                        android:src="@drawable/lnr_progres" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/devam_ediyor"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_ayrac"
            android:layout_width="@dimen/progres_padding"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:layout_marginBottom="@dimen/detay_menu_35"
            android:background="@color/text_color"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lnr_ilk"
            app:layout_constraintTop_toTopOf="parent"></LinearLayout>

        <LinearLayout

            android:id="@+id/lnr_yan_bir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/lnr_ayrac"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_usta_adi" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usta_adi"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_usta"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_yan_iki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_marginTop="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/lnr_yan_bir"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_tarih" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/randevu_tarih"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_tarih"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_yan_alt_bir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/lnr_ariza"
            app:layout_constraintStart_toEndOf="@id/lnr_ayrac"
            app:layout_constraintTop_toBottomOf="@id/lnr_yan_bir">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_supervisor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supervisor"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_usta_2"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_yan_alt_iki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_25"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/lnr_ariza"
            app:layout_constraintStart_toEndOf="@id/lnr_yan_bir"
            app:layout_constraintTop_toBottomOf="@id/lnr_yan_iki">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_tarih" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ise_baslama"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/menu_text_16" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_tarih"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_ariza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detay_menu_15"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/lnr_ariza_detay"
            app:layout_constraintEnd_toEndOf="@+id/lnr_yan_alt_iki"
            app:layout_constraintStart_toStartOf="@+id/lnr_yan_alt_bir">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_aciklama" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ariza_nedini"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_info_short"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_ariza_detay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detay_menu_35"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/lnr_ariza"
            app:layout_constraintStart_toStartOf="@+id/lnr_yan_alt_bir">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_icon"
                android:src="@drawable/ic_aciklama" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/menu_text_12"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acikmala_not"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_info_short"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_menu_16" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/btn_is_kapatma"
            android:layout_width="@dimen/home_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:layout_marginEnd="@dimen/detay_menu_20"
            android:background="@drawable/btn_is_kapatma"
            android:text="@string/is_kapatma"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_gps"
            android:layout_width="@dimen/home_button_width"
            android:layout_height="@dimen/home_button_width"
            android:layout_marginTop="@dimen/detay_menu_20"
            app:layout_constraintEnd_toEndOf="@+id/btn_is_kapatma"
            app:layout_constraintStart_toStartOf="@+id/btn_is_kapatma"
            app:layout_constraintTop_toBottomOf="@+id/btn_is_kapatma"
            app:srcCompat="@drawable/gps" />

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txt_oncelik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_20"
            android:text="@string/oncelik_durumu"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_gps"
            app:layout_constraintStart_toStartOf="@+id/img_gps"
            app:layout_constraintTop_toBottomOf="@+id/img_gps" />

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/txt_durum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_15"
            android:text="@string/yuksek"
            android:textAllCaps="true"
            android:textColor="@color/yuksek"
            android:textSize="@dimen/text_menu_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_gps"
            app:layout_constraintStart_toStartOf="@+id/img_gps"
            app:layout_constraintTop_toBottomOf="@+id/txt_oncelik" />

        <RelativeLayout
            android:id="@+id/rlt_oncelik"
