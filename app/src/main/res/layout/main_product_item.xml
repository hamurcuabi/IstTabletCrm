<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_rcv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/detay_menu_12"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="@dimen/detay_menu_12"
    android:layout_marginBottom="2dp"
    android:background="@drawable/mainproduct_rounded"
    android:elevation="1dp"
    android:minHeight="@dimen/detay_menu_110">

    <ImageView
        android:id="@+id/img_anapic"
        android:layout_width="@dimen/detay_menu_100"
        android:layout_height="@dimen/detay_menu_100"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_anatext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin30"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_anapic"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@id/img_anapic"
        app:layout_constraintTop_toTopOf="@+id/img_anapic" />

    <TextView
        android:id="@+id/txt_anacount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="24"
        android:textColor="@color/kontrol_listesi"
        android:textSize="@dimen/text_menu_20"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:text="@string/altkategori"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_anacount" />
</android.support.constraint.ConstraintLayout>