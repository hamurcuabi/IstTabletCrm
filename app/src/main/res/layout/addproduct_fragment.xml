<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/detay_menu_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/detay_menu_12"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:src="@drawable/ic_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detay_menu_8"
            android:layout_marginBottom="@dimen/detay_menu_8"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/detay_menu_12"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/urun_adi"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/miktar"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.8"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/birim"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.8"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/ucretli_ucretsiz"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/ucret"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.7"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/aciklama"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detay_menu_8"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_urunadi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/detay_menu_12"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <EditText
                android:id="@+id/edt_miktar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_regular"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <AutoCompleteTextView
                android:id="@+id/spn_birim"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height45"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.8"
                android:background="@drawable/spn_style"
                android:focusableInTouchMode="true"
                android:paddingStart="@dimen/detay_menu_12"
                android:paddingEnd="@dimen/margin30" />


            <Spinner
                android:id="@+id/spn_ucretli"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_height45"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.8"
                android:background="@drawable/spn_style"
                android:entries="@array/ucretli"
                android:theme="@style/SpinnerThemeLight"

                />

            <EditText
                android:id="@+id/edt_fiyat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.1"
                android:fontFamily="@font/roboto_regular"
                android:inputType="numberDecimal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />

            <EditText
                android:id="@+id/edt_descp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:layout_weight="1.7"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/text_color"
                android:textSize="@dimen/menu_text_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/detay_menu_12"
            android:layout_marginBottom="@dimen/detay_menu_12"
            android:background="@color/white"
            android:gravity="end|center">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/m200"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/detay_menu_12"
                android:background="@drawable/btn_kontrol"
                android:text="@string/kaydet"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>