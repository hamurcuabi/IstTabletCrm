<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/text_menu_32"
    android:layout_marginEnd="@dimen/menu_left_32"
    android:background="@color/item_bg"
    android:minHeight="@dimen/margin80"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_kod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.8"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:textColor="@color/malzeme_icerik"
        android:textSize="@dimen/menu_text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_urunadi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="2"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <EditText
        android:id="@+id/edt_miktar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.2"
        android:fontFamily="@font/roboto_regular"
        android:inputType="numberDecimal"

        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <TextView
        android:id="@+id/txt_birim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="0.8"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <TextView
        android:id="@+id/txt_stokdurumu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.6"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <TextView
        android:id="@+id/txt_garantidurumu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />

    <Spinner
        android:backgroundTint="@color/text_color"
        android:background="@drawable/spn_style"
        android:id="@+id/spn_ucretli"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height45"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.8"
        android:entries="@array/ucretli"
        />

    <TextView

        android:id="@+id/txt_descp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.7"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/menu_text_16" />
</LinearLayout>