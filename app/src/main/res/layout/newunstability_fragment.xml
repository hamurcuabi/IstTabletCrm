<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detay_menu_50"
        android:layout_marginTop="@dimen/detay_menu_40"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/yeni_uygunsulzuk"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_32" />

    <LinearLayout
        android:id="@+id/lnr_mus_adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detay_menu_50"
        android:layout_marginEnd="@dimen/detay_menu_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_mus_adi"
            android:layout_width="@dimen/txt_calendar"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edt_musteri_adi"
            android:layout_alignBottom="@+id/edt_musteri_adi"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/edt_musteri_adi"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/musteri_adi"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/text_menu_15"
            android:textStyle="bold" />

        <EditText
            android:layout_width="@dimen/edt_calendar"
            android:layout_height="@dimen/edt_calendar_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/detay_menu_30"
            android:background="@drawable/btn_calendars"
            android:drawableRight="@drawable/ic_eye"
            android:hint="@string/apart_adi"
            android:paddingLeft="@dimen/detay_menu_25"
            android:paddingRight="@dimen/detay_menu_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detay_menu_5"
        android:layout_marginEnd="@dimen/detay_menu_50"
        android:orientation="horizontal">

        <TextView

            android:layout_width="@dimen/txt_calendar"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edt_musteri_adi"
            android:layout_alignBottom="@+id/edt_musteri_adi"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/edt_musteri_adi"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/asansor_no"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/text_menu_15"
            android:textStyle="bold" />

        <EditText

            android:layout_width="@dimen/edt_calendar"
            android:layout_height="@dimen/edt_calendar_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/detay_menu_30"
            android:background="@drawable/btn_calendars"
            android:drawableRight="@drawable/ic_eye"
            android:hint="@string/asansor_no"
            android:paddingLeft="@dimen/detay_menu_25"
            android:paddingRight="@dimen/detay_menu_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detay_menu_5"
        android:layout_marginEnd="@dimen/detay_menu_50"
        android:orientation="horizontal">

        <TextView

            android:layout_width="@dimen/txt_calendar"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edt_musteri_adi"
            android:layout_alignBottom="@+id/edt_musteri_adi"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/edt_musteri_adi"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/tarih"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/text_menu_15"
            android:textStyle="bold" />

        <EditText

            android:layout_width="@dimen/edt_calendar"
            android:layout_height="@dimen/edt_calendar_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/detay_menu_30"
            android:background="@drawable/btn_calendars"
            android:drawableRight="@drawable/ic_eye"
            android:hint="@string/tarih"
            android:paddingLeft="@dimen/detay_menu_25"
            android:paddingRight="@dimen/detay_menu_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detay_menu_5"
        android:layout_marginEnd="@dimen/detay_menu_50"
        android:orientation="horizontal">

        <TextView

            android:layout_width="@dimen/txt_calendar"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edt_musteri_adi"
            android:layout_alignBottom="@+id/edt_musteri_adi"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/edt_musteri_adi"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/aciklama"
            android:textAlignment="viewEnd"
            android:textColor="@color/text_color_5"
            android:textSize="@dimen/text_menu_15"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_musteri_adi"
            android:layout_width="@dimen/edt_calendar"
            android:layout_height="@dimen/detay_menu_110"
            android:layout_marginStart="@dimen/detay_menu_30"
            android:background="@drawable/btn_calendars"
            android:drawableEnd="@drawable/ic_pen"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:paddingBottom="@dimen/detay_menu_70"
            android:paddingLeft="@dimen/detay_menu_25"
            android:paddingRight="@dimen/detay_menu_12"
            android:singleLine="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/detay_menu_40"
        android:layout_marginTop="@dimen/detay_menu_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/detay_menu_110"
        android:gravity="center">

        <Button
            android:layout_width="@dimen/detay_menu_145"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_kontrol"
            android:text="@string/kaydet"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:layout_width="@dimen/detay_menu_145"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detay_menu_12"
            android:background="@drawable/btn_konum_rounded"
            android:text="@string/gonder"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>