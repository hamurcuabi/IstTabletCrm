<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80"
    android:background="@color/back"
    android:elevation="1dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_tranfertipi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/padding_rigt32"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_urunadi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1.7"

        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_miktar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="0.5"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_birim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_tarih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_onay_durumu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/detay_menu_12"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <ImageView
        android:id="@+id/img_statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/detay_menu_8"
        android:layout_marginEnd="@dimen/detay_menu_8" />

    <TextView
        android:id="@+id/txt_depo_cikis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/m16"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />

    <TextView
        android:id="@+id/txt_depo_gonderilecek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/padding_rigt32"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_menu_16" />
</LinearLayout>